<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pii"
    tools:context=".fragment.BathroomInfo">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quick_view_toilet"></ImageView>

    <ScrollView
        android:id="@+id/Scroller"
        android:layout_width="match_parent"
        android:layout_height="593dp">


        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="160dp"
                android:fontFamily="@font/slackey"
                android:text="tags"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/poop2"
                android:layout_width="35dp"
                android:layout_height="37dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_886736" />

            <ImageView
                android:id="@+id/poop5"
                android:layout_width="35dp"
                android:layout_height="37dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_886736" />

            <Button
                android:id="@+id/reviewBtn"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_alignStart="@+id/description"
                android:layout_alignLeft="@+id/description"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="31dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/slackey"
                android:text="reviews" />

            <TextView
                android:id="@+id/bRoomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/slackey"
                android:text="building room#"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/poop1"
                android:layout_width="31dp"
                android:layout_height="36dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="120dp"
                app:layout_constraintStart_toStartOf="@id/bRoomName"
                app:srcCompat="@drawable/ic_886736" />

            <ImageView
                android:id="@+id/poop4"
                android:layout_width="35dp"
                android:layout_height="37dp"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_886736" />

            <ImageView
                android:id="@+id/poop3"
                android:layout_width="35dp"
                android:layout_height="37dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_886736" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Tags"
                android:layout_alignStart="@+id/Tags"
                android:layout_alignLeft="@+id/Tags"
                android:layout_marginStart="-36dp"
                android:layout_marginLeft="-36dp"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/slackey"
                android:text="TextView"
                android:textColor="#FF5722"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/Tags"
                app:layout_constraintTop_toTopOf="@id/Tags" />

            <LinearLayout
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reviewBtn"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="314dp"
                android:isScrollContainer="false"
                android:orientation="vertical"></LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

